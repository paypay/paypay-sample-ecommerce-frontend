{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2019",
        "noImplicitAny": true,
        "declaration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        // "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": ["node_modules/@types"],
        "types": [
          "node"
        ]        
    },
    "include": [
        "src/**/*"
    ]
}